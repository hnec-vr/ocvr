.hero-unit
  %h2= "Please enter your 12-digit National ID Number"
  = form_tag findnid_registration_path do
    - if @invalid_nid_length
      .alert.alert-error= "Please make sure your National ID Number is 12-digits"
    - if @invalid_nid_confirmation
      .alert.alert-error= "Your confirmation did not match."
    - if @not_found
      .alert.alert-error= "Invalid National ID Number"
    - if @captcha_incorrect
      .alert.alert-error= "Captcha was incorrect"

    %label= "National ID Number"
    = text_field_tag :nid
    %br
    %label= "Retype National ID Number"
    = text_field_tag :nid_confirmation
    %br
    = show_simple_captcha(:code_type => "numeric") if @render_captcha
    = submit_tag "Confirm", :class => "btn btn-warning"

